<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @cocktail.photo,  crop: :fill %>')">
  <div class="text-center">
    <h1><%= @cocktail.name %> <%= link_to edit_cocktail_path do %><i class="far fa-edit text-white"></i><% end %> <%= link_to cocktail_path(@cocktail), method: 'delete', data: {confirm: "Are you sure?"} do %><i class="far fa-trash-alt text-white"></i><% end %></h1>
  </div>
  <div class="container" id="show_page">
    <div class="row">
      <div class="col-6">
        <h3 class="text-white mt-5">Ingredient list</h3>
        <ul>
            <% @doses.each do |dose| %>
              <li class="text-white"><%= dose.ingredient.name %> - <%= dose.description %>  <%= link_to dose_path(dose), method: 'delete', data: {confirm: "Are you sure?"} do %><i class="fas fa-trash"></i><% end %></li>
            <% end %>
        </ul>
      </div>
      <div class="col-6">
        <div class="mt-5 text-white">
          <h3>Add an ingredient</h3>
          <div>
            <%= simple_form_for [@cocktail, @dose] do |f| %>
            <%= f.association :ingredient %>
            <%= f.input :description %>
            <%= f.submit "Add", class: 'btn btn-success' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <h3 class="text-white mt-5">Reviews</h3>
        <ul>
            <% @reviews.each do |review| %>
              <li class="text-white"><%= review.rating %> - <%= review.content %></li>
            <% end %>
        </ul>
      </div>
      <div class="col-6">
        <div class="mt-5 text-white">
          <h3>Add a review</h3>
          <div>
            <%= raise %>
            <%= simple_form_for [@cocktail, @review] do |f| %>
            <%= f.input :rating %>
            <%= f.input :description %>
            <%= f.submit "Add", class: 'btn btn-success' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
